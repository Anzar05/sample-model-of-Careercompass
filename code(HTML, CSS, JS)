<section id="careerSuggester" style="margin-top:60px;">
  <h1>Career Path Suggester üéØ</h1>
  
  <form id="careerForm" class="career-form">
    <label for="stage">Your Education Stage:</label>
    <select id="stage">
      <option value="">-- Select --</option>
      <option value="btech">B.Tech (During)</option>
      <option value="after">After B.Tech</option>
    </select>

    <label for="branch">Branch / Specialization:</label>
    <select id="branch">
      <option value="">-- Select --</option>
      <option value="cse">Computer Science</option>
      <option value="it">Information Technology</option>
      <option value="ece">Electronics</option>
      <option value="eee">Electrical</option>
      <option value="mech">Mechanical</option>
      <option value="civil">Civil</option>
    </select>

    <label for="skills">Skills / Interests:</label>
    <select id="skills">
      <option value="">-- Select --</option>
      <option value="web">Web Development</option>
      <option value="ml">Machine Learning / AI</option>
      <option value="data">Data Science / Analytics</option>
      <option value="cloud">Cloud / DevOps</option>
      <option value="cyber">Cybersecurity</option>
      <option value="core">Core Engineering Jobs</option>
    </select>

    <button type="button" onclick="suggestCareer()">Get Suggestions</button>
  </form>

  <div id="careerResult" style="margin-top:25px;"></div>
</section>


<footer>
  CareerPath - Helping you choose the right career path based on your skills and interests.
</footer>

<script>
  const steps = [...document.querySelectorAll('.form-step')];
  const stepIndicators = [...document.querySelectorAll('.step')];
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const resultDiv = document.getElementById('result');
  const langTabs = document.querySelectorAll('.lang-tab');
  const langCards = document.querySelectorAll('.lang-card');
  const selectedLangsList = document.getElementById('selectedLangsList');
  const hamburger = document.querySelector('.hamburger');
  const sideNav = document.querySelector('.side-nav');
  const overlay = document.querySelector('.overlay');
  let currentStep = 0;
  let selectedLanguages = [];

  // Side navigation functionality
  hamburger.addEventListener('click', () => {
    sideNav.classList.toggle('active');
    overlay.classList.toggle('active');
  });

  overlay.addEventListener('click', () => {
    sideNav.classList.remove('active');
    overlay.classList.remove('active');
  });

  // Language filtering functionality
  langTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Update active tab
      langTabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      
      const category = tab.getAttribute('data-category');
      
      // Show/hide languages based on category
      langCards.forEach(card => {
        if (category === 'all') {
          card.style.display = 'block';
        } else {
          const categories = card.getAttribute('data-categories').split(',');
          card.style.display = categories.includes(category) ? 'block' : 'none';
        }
      });
    });
  });
  const typingText = document.getElementById("typingText");
const phrases = ["Web Development üíª", "Mobile Apps üì±", "Data Science üìä", "AI & Machine Learning ü§ñ", "System Programming ‚öôÔ∏è"];
let i = 0, j = 0, currentPhrase = [], isDeleting = false;

function loop() {
  typingText.innerHTML = currentPhrase.join("");

  if (i < phrases.length) {
    if (!isDeleting && j <= phrases[i].length) {
      currentPhrase.push(phrases[i][j]);
      j++;
    }

    if (isDeleting && j <= phrases[i].length) {
      currentPhrase.pop();
      j--;
    }

    if (j === phrases[i].length) {
      isDeleting = true;
      setTimeout(loop, 1200);
      return;
    }

    if (isDeleting && j === 0) {
      currentPhrase = [];
      isDeleting = false;
      i++;
      if (i === phrases.length) i = 0;
    }
  }
  setTimeout(loop, isDeleting ? 60 : 120);
}
loop();


  // Language selection functionality
  langCards.forEach(card => {
    const checkbox = card.querySelector('input[type="checkbox"]');
    
    checkbox.addEventListener('change', () => {
      if (checkbox.checked) {
        selectedLanguages.push(checkbox.value);
      } else {
        selectedLanguages = selectedLanguages.filter(lang => lang !== checkbox.value);
      }
      
      updateSelectedLanguagesList();
    });
  });

  function updateSelectedLanguagesList() {
    selectedLangsList.innerHTML = '';
    
    if (selectedLanguages.length === 0) {
      selectedLangsList.innerHTML = '<p>No languages selected yet</p>';
      return;
    }
    
    selectedLanguages.forEach(lang => {
      const langElement = document.createElement('div');
      langElement.className = 'selected-lang';
      langElement.innerHTML = `
        ${lang}
        <span class="remove-lang" data-lang="${lang}">√ó</span>
      `;
      selectedLangsList.appendChild(langElement);
    });
    
    // Add event listeners to remove buttons
    document.querySelectorAll('.remove-lang').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const langToRemove = e.target.getAttribute('data-lang');
        selectedLanguages = selectedLanguages.filter(lang => lang !== langToRemove);
        
        // Uncheck the corresponding checkbox
        const checkbox = document.querySelector(`.lang-card input[value="${langToRemove}"]`);
        if (checkbox) checkbox.checked = false;
        
        updateSelectedLanguagesList();
      });
    });
  }

  function updateFormSteps() {
    steps.forEach((step, idx) => {
      step.classList.toggle('active', idx === currentStep);
      stepIndicators[idx].classList.toggle('active', idx === currentStep);
      stepIndicators[idx].classList.toggle('completed', idx < currentStep);
    });
    prevBtn.disabled = currentStep === 0;
    nextBtn.textContent = currentStep === steps.length - 1 ? 'Submit' : 'Next';
    resultDiv.style.display = 'none';
  }

  nextBtn.addEventListener('click', () => {
    if (currentStep < steps.length - 1) {
      currentStep++;
      updateFormSteps();
    } else {
      showResults();
    }
  });
  function suggestCareer() {
  const stage = document.getElementById('stage').value;
  const branch = document.getElementById('branch').value;
  const skills = document.getElementById('skills').value;
  const resultDiv = document.getElementById('careerResult');

  let suggestions = "";

  if (!stage || !branch || !skills) {
    resultDiv.innerHTML = "<p style='color:red'>‚ö†Ô∏è Please select all fields!</p>";
    return;
  }

  // Logic for suggestions
  if (branch === "cse" || branch === "it") {
    if (skills === "web") {
      suggestions = `
        <div class="job-card">
          <img src="https://cdn-icons-png.flaticon.com/512/919/919830.png"/>
          <div><h4>Full-Stack Developer</h4>
          <p>Learn MERN/MEAN stack. Contribute to open-source. Internships matter!</p></div>
        </div>
      `;
    }
    if (skills === "ml") {
      suggestions = `
        <div class="job-card">
          <img src="https://cdn-icons-png.flaticon.com/512/4712/4712035.png"/>
          <div><h4>Machine Learning Engineer</h4>
          <p>Focus on Python, TensorFlow, PyTorch, and projects. Explore AI/ML research.</p></div>
        </div>
      `;
    }
    if (skills === "data") {
      suggestions = `
        <div class="job-card">
          <img src="https://cdn-icons-png.flaticon.com/512/4149/4149670.png"/>
          <div><h4>Data Analyst / Scientist</h4>
          <p>Learn SQL, Python, Power BI, Tableau. Build projects on Kaggle.</p></div>
        </div>
      `;
    }
  }

  if (branch === "ece" || branch === "eee") {
    if (skills === "core") {
      suggestions = `
        <div class="job-card">
          <img src="https://cdn-icons-png.flaticon.com/512/3022/3022309.png"/>
          <div><h4>VLSI / Embedded Engineer</h4>
          <p>Focus on Embedded C, Verilog, IoT systems, and PCB design.</p></div>
        </div>
      `;
    }
    if (skills === "cloud") {
      suggestions = `
        <div class="job-card">
          <img src="https://cdn-icons-png.flaticon.com/512/4248/4248443.png"/>
          <div><h4>Cloud/DevOps Engineer</h4>
          <p>Learn AWS, Azure, Docker, Kubernetes, and CI/CD pipelines.</p></div>
        </div>
      `;
    }
  }

  if (branch === "mech" || branch === "civil") {
    suggestions = `
      <div class="job-card">
        <img src="https://cdn-icons-png.flaticon.com/512/188/188314.png"/>
        <div><h4>Core Engineering Roles</h4>
        <p>Focus on AutoCAD, SolidWorks, Project Management, and GATE/PSUs.</p></div>
      </div>
    `;
  }

  // After B.Tech specific
  if (stage === "after" && (branch === "cse" || branch === "it")) {
    suggestions += `
      <div class="job-card">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"/>
        <div><h4>Higher Studies (M.Tech/MS)</h4>
        <p>Pursue research or specializations abroad in AI, Cloud, or Cybersecurity.</p></div>
      </div>
    `;
  }

  resultDiv.innerHTML = `<h3>Suggested Career Paths:</h3>${suggestions}`;
}


  prevBtn.addEventListener('click', () => {
    if (currentStep > 0) { currentStep--; updateFormSteps(); }
  });

  // Show careers when form is submitted
document.getElementById("careerForm").addEventListener("submit", function(e) {
  e.preventDefault();
  const course = document.getElementById("course").value;
  const branch = document.getElementById("branch").value;
  const skill = document.getElementById("skill").value;

  const resultDiv = document.getElementById("careerResult");
  resultDiv.innerHTML = "";

  if (course && branch && skill && careerData[course][branch][skill]) {
    resultDiv.innerHTML = `<h3>Suggested Career Paths</h3>`;
    careerData[course][branch][skill].forEach(job => {
      resultDiv.innerHTML += `
        <div class="job-card">
          <img src="${job.img}" alt="">
          <div>
            <h4>${job.title}</h4>
            <p>${job.desc}</p>
            <p><strong>Companies Hiring:</strong> ${job.companies.join(", ")}</p>
          </div>
        </div>
      `;
    });
  } else {
    resultDiv.innerHTML = `<p style="color:red;">Please select a valid course, branch, and skill.</p>`;
  }
});


  function showResults() {
    const branch = document.getElementById('branch').value;
    const interest = document.getElementById('interest').value;
    const skillLevel = parseInt(document.getElementById('skillLevel').value);

    let suggestionText = `<p><strong>Languages:</strong> ${selectedLanguages.join(', ') || 'None selected'}</p>`;
    suggestionText += `<p><strong>Branch:</strong> ${branch}</p>`;
    suggestionText += `<p><strong>Interest:</strong> ${interest}</p>`;
    suggestionText += `<p><strong>Skill Level:</strong> ${skillLevel}/5</p>`;

    suggestionText += `<div class="job-card">
        <img src="https://cdn-icons-png.flaticon.com/512/5968/5968866.png"/>
        <div class="job-info">
          <h4>Sample Role Suggestion</h4>
          <p>Based on your inputs, career recommendations will appear here.</p>
        </div>
      </div>`;

    resultDiv.style.display = 'block';
    resultDiv.innerHTML = `<h3>Your Career Suggestions üéØ</h3>${suggestionText}`;
    window.scrollTo({ top: resultDiv.offsetTop - 20, behavior: 'smooth' });
  }

  // Initialize the page
  updateFormSteps();
  updateSelectedLanguagesList();
</script>

</body>
</html>
